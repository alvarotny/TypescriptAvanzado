{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "noUncheckedSideEffectImports": false,

    "verbatimModuleSyntax": false,   // ðŸ”¥ FIX PRINCIPAL
    "isolatedModules": false         // ðŸ”¥ FIX SECUNDARIO
  }
}
